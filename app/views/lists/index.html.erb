<div class="top">
  <%= link_to 'New List', new_list_path, :class => "button" %>
  <h1>welcome!</h1>
  <div class="user_name">
    <% if current_user %>
      <p><%= current_user.username %></p>
      <%= link_to "Sign out", signout_path, :class => "button", :style => "float:right;" %>
    <% else %>
      <%= link_to "Sign in", "/auth/twitter", :class => "button" %>
    <% end %>
  </div>
</div>

<div class="box" style="width:90%;">
  <h1>Listing lists</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= list.description %></td>
          <td><%= link_to 'Show', list, :class => "button" %></td>
          <td><%= link_to 'Edit', edit_list_path(list), :class => "button" %></td>
          <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

